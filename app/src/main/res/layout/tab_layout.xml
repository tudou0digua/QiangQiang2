<?xml version="1.0" encoding="utf-8"?>
<com.cb.qiangqiang2.ui.view.TabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tl_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <com.cb.qiangqiang2.ui.view.TabView
        android:id="@+id/tab_home"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tab:text="首页"
        tab:textSize="10dp"
        tab:textPadding="4dp"
        tab:imageDefault="@drawable/tab_icon_home_default"
        tab:imageSelected="@drawable/tab_icon_home_selected"
        tab:coloSelected="#3AA3FF"
        tab:coloDefault="#BDBDBD"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <com.cb.qiangqiang2.ui.view.TabView
        android:id="@+id/tab_section"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tab:text="版块"
        tab:textSize="10dp"
        tab:textPadding="4dp"
        tab:imageDefault="@drawable/tab_icon_home_default"
        tab:imageSelected="@drawable/tab_icon_home_selected"
        tab:coloSelected="#3AA3FF"
        tab:coloDefault="#BDBDBD"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <com.cb.qiangqiang2.ui.view.TabView
        android:id="@+id/tab_message"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tab:text="消息"
        tab:textSize="10dp"
        tab:textPadding="4dp"
        tab:imageDefault="@drawable/tab_icon_home_default"
        tab:imageSelected="@drawable/tab_icon_home_selected"
        tab:coloSelected="#3AA3FF"
        tab:coloDefault="#BDBDBD"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <com.cb.qiangqiang2.ui.view.TabView
        android:id="@+id/tab_my"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tab:text="我的"
        tab:textSize="10dp"
        tab:textPadding="4dp"
        tab:imageDefault="@drawable/tab_icon_home_default"
        tab:imageSelected="@drawable/tab_icon_home_selected"
        tab:coloSelected="#3AA3FF"
        tab:coloDefault="#BDBDBD"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

</com.cb.qiangqiang2.ui.view.TabLayout>