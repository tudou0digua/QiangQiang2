<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cb.qiangqiang2.ui.fragment.PostFragment">

    <com.cb.qiangqiang2.ui.view.waveswiperefreshlayout.WaveSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:above_wave_color="@color/colorPrimaryLight"
        app:blow_wave_color="@color/colorPrimary">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.cb.qiangqiang2.ui.view.waveswiperefreshlayout.WaveSwipeRefreshLayout>

</RelativeLayout>
